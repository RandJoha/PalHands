{
  "name": "palhands-backend",
  "version": "1.0.0",
  "description": "Backend API for PalHands - A platform connecting people with home-based service providers in Palestine",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "test:api": "jest tests/e2e --runInBand",
    "seed": "node src/utils/seedDatabase.js",
    "seed:availability": "node src/utils/seedAvailability.js",
    "seed:availability:all": "node src/utils/seedAvailabilityAll.js",
    "restore:providers": "node src/utils/restoreProviders.js",
    "migrate:remove-users-providers": "node src/utils/migrate_removeProvidersFromUsers.js",
    "sync:services": "node src/utils/syncProviderServices.js",
    "fix:emergency:selected": "node src/utils/tagSelectedServicesEmergency.js",
    "migrate:provider-services": "node migrate-provider-services.js",
    "recompute:provider-services": "node src/utils/recomputeProviderServicesPublishable.js",
    "prune:availability:legacy": "node src/utils/pruneLegacyAvailabilityFields.js",
    "restore:fe": "node src/utils/restoreFrontendData.js",
    "restore:reset": "cross-env RESET=true node src/utils/restoreFrontendData.js",
    "restore:prune": "cross-env PRUNE=true node src/utils/restoreFrontendData.js",
    "restore:reset-prune": "cross-env RESET=true PRUNE=true node src/utils/restoreFrontendData.js"
  },
  "keywords": [
    "palhands",
    "services",
    "palestine",
    "home-services",
    "booking",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "PalHands Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.596.0",
    "@aws-sdk/s3-request-presigner": "^3.596.0",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "mongoose": "^8.1.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.8",
    "pino": "^8.21.0",
    "pino-http": "^9.0.0",
    "rotating-file-stream": "^3.1.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
